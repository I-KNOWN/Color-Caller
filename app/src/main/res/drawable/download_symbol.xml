<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Define the diagonal gradient shape -->
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:type="linear"
          android:angle="-45"
          android:startColor="#CCFFFFFF"
          android:centerColor="#99FFFFFF"
          android:endColor="#4DFFFFFF" />
      <stroke
          android:color="@color/black"
          android:width="2dp" />
      <corners android:radius="100dp" />
    </shape>
  </item>

  <!-- Rotate the gradient shape by 45 degrees -->
  <item android:top="-100dp">
    <rotate
        android:fromDegrees="-45"
        android:toDegrees="0"
        android:pivotX="0%"
        android:pivotY="100%">
      <shape android:shape="rectangle">
        <solid android:color="@android:color/transparent" />
      </shape>
    </rotate>
  </item>

</layer-list>

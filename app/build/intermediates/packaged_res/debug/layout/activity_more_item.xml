<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".callertheme.ui.MoreItemActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/more_item_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        tools:targetApi="lollipop" /><!--Something is temporary-->

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/more_item_toolbar"
        android:id="@+id/more_item_recycler"
        android:scrollbars="vertical"
        android:layout_above="@+id/adsView0"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/adsView0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="bottom"
        android:layout_marginBottom="3dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp" />

</RelativeLayout>